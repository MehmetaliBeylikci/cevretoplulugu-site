{
  "version": 2,
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },

    /* robots & sitemap dosyaların public klasöründe olduğu için
       sadece bu ikisini public altına yönlendiriyoruz */
    { "src": "/robots.txt",  "dest": "/public/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/public/sitemap.xml" },

    /* Kök ve diğer tüm yollar için dosyalar REPO KÖKÜNDE */
    { "src": "/",      "dest": "/index.html" },
    { "src": "/(.*)",  "dest": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Frame-Options", "value": "SAMEORIGIN" }
      ]
    }
  ]
}
